{
  "manifest_version": 3,
  "name": "LINE WORKS Talk Exporter",
  "version": "1.0",
  "description": "LINE WORKSのトーク画面をテキストファイルとして出力します。",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.worksmobile.com/*", "https://talk.worksmobile.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
